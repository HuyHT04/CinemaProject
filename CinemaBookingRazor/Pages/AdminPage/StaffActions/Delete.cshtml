@page "{id}"
@model CinemaBookingRazor.Pages.AdminPage.StaffActions.DeleteModel
@{
    Layout = null;
}

<h2>🗑 Delete Staff</h2>

<div class="delete-container">
    <p>Are you sure you want to delete staff <b>@Model.Staff.FullName</b>?</p>

    <form method="post" class="delete-form">
        <input type="hidden" asp-for="Staff.Id" />
        <button type="submit" class="btn-delete">Yes, Delete</button>
        <a href="/AdminPage/ManageStaff/ManageStaff" class="btn-cancel">Cancel</a>
    </form>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f8;
        padding: 30px;
    }

    h2 {
        color: #e74c3c;
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-container {
        max-width: 500px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        text-align: center;
    }

        .delete-container p {
            font-size: 16px;
            margin-bottom: 25px;
            color: #34495e;
        }

    .delete-form {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

        .delete-form button,
        .delete-form a {
            padding: 10px 20px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: bold;
            text-decoration: none;
            transition: 0.3s;
            cursor: pointer;
        }

    .btn-delete {
        background-color: #e74c3c;
        border: none;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c0392b;
        }

    .btn-cancel {
        background-color: #bdc3c7;
        color: #2c3e50;
    }

        .btn-cancel:hover {
            background-color: #95a5a6;
        }
</style>
