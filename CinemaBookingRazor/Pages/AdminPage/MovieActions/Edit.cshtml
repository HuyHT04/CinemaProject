@page "{id:int}"
@model CinemaBookingRazor.Pages.AdminPage.MovieActions.EditModel
@{
    Layout = null;
}

<h2>✏️ Edit Movie</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p class="error-msg">@Model.ErrorMessage</p>
}

<form method="post" class="movie-form">
    <!-- Giữ Id -->
    <input type="hidden" asp-for="Movie.Id" />

    <div class="form-group">
        <label>Title:</label>
        <input type="text" asp-for="Movie.Title" required />
        <span asp-validation-for="Movie.Title" class="validation-msg"></span>
    </div>

    <div class="form-group">
        <label>Description:</label>
        <textarea asp-for="Movie.Description" required></textarea>
        <span asp-validation-for="Movie.Description" class="validation-msg"></span>
    </div>

    <div class="form-group">
        <label>Genre:</label>
        <input type="text" asp-for="Movie.Genre" required />
        <span asp-validation-for="Movie.Genre" class="validation-msg"></span>
    </div>

    <div class="form-group">
        <label>Duration (minutes):</label>
        <input type="number" asp-for="Movie.Duration" min="1"
               oninput="this.value=this.value.replace(/[^0-9]/g,'');" required />
        <span asp-validation-for="Movie.Duration" class="validation-msg"></span>
    </div>

    <div class="form-group">
        <label>Price:</label>
        <input type="number" step="0.01" asp-for="Movie.Price" min="0"
               oninput="this.value=this.value.replace(/[^0-9.]/g,'');" required />
        <span asp-validation-for="Movie.Price" class="validation-msg"></span>
    </div>

    <div class="form-group">
        <label>Poster URL:</label>
        <input type="text" asp-for="Movie.PosterUrl" required />
        <span asp-validation-for="Movie.PosterUrl" class="validation-msg"></span>
    </div>

    <button type="submit" class="btn-submit">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f8;
        padding: 30px;
    }

    h2 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 25px;
    }

    .error-msg {
        color: #e74c3c;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
    }

    .movie-form {
        max-width: 600px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            margin-bottom: 6px;
            font-weight: bold;
            color: #34495e;
        }

        .form-group input,
        .form-group textarea {
            padding: 10px 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            transition: 0.3s;
        }

            .form-group input:focus,
            .form-group textarea:focus {
                outline: none;
                border-color: #3498db;
                box-shadow: 0 0 5px rgba(52,152,219,0.3);
            }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

    .validation-msg {
        color: #e74c3c;
        font-size: 13px;
        margin-top: 4px;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background-color: #3498db;
        border: none;
        color: white;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-submit:hover {
            background-color: #2980b9;
        }
</style>
